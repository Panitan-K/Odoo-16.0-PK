                </xpath>

                <xpath expr="//tree/field[@name='date_planned']" position="after">
                    <field name="date_order"/>
                </xpath>
                <xpath expr="//tree/field[@name='date_order']" position="attributes">
                    <attribute name="string">วันที่ขอซื้อ</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='date_order']" position="attributes">
                    <attribute name="string">วันที่ขอซื้อ</attribute>
                </xpath>

                <xpath expr="//tree/field[@name='date_order']" position="after">
                     <field name="sum_product_qty"/>
                </xpath>
                <xpath expr="//tree/field[@name='activity_ids']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='user_id']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='origin']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='amount_total']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='state']" position="attributes">
                     <attribute name="string">สถานะ</attribute>
                </xpath>
            </field>
    </record>
<!--                       REQUEST FORM                             -->
    <record id="view_fmd_purchase_request_form" model="ir.ui.view">
        <field name="name">purchase.request.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="show_custom_fields" invisible="1"/>
                </group>
             </xpath>

            <xpath expr="//div[@class='oe_title']" position="after">
                <span class="o_form_label"> <!--attrs="{'invisible': [('show_custom_fields', '=', False)]}"-->
                    จัดทำใบขอซื้อ
                </span>
            </xpath>
            <xpath expr="//group/field[@name='partner_id']" position="before">
                <field name="employee_id" required="1" />
            </xpath>
            <xpath expr="//group/field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="required">0</attribute>
            </xpath>
            <xpath expr="//group/field[@name='partner_ref']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//group/field[@name='date_order']" position="attributes">
                <attribute name="string">วันที่ขอซื้อ/จัดจ้าง</attribute>
            </xpath>

            <xpath expr="//group/field[@name='date_planned']" position="attributes">
                <attribute name="string">วันที่ต้องการสินค้า</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="item_seq" string="ลำดับ" readonly="1"/>
            </xpath>

            <xpath expr="//tree/field[@name='product_id']" position="attributes">
                <attribute name="string">สินค้า</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="item_description"/>
            </xpath>
            <xpath expr="//tree/field[@name='product_qty']" position="attributes">
                <field string="จำนวนที่ต้องการซื้อ"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="after">
                <field name="required_reason"/>
            </xpath>



            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='taxes_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
