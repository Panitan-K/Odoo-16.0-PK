<odoo>
       <record id="view_is_purchase_order_rm_form" model="ir.ui.view">
        <field name="name">purchase.order.form.rm</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Modify visibility for specific fields related to purchasing RM -->
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Add fields specific to RM purchase -->
            <!--<xpath expr="//field[@name='order_line']/tree" position="inside">
