<!-- views/purchase_order_rm_views.xml -->
<odoo>
               <!-- RM Tree -->
    <record id="view_is_purchase_order_rm_tree" model="ir.ui.view">
            <field name="name">purchase.order.line.rm.tree</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_tree"/> <!-- Correct module name -->
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                     <attribute name="create">true</attribute>-->
                </xpath>
                <xpath expr="//tree/field[@name='partner_id']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='name']" position="after">
                    <field name="date_order"/>
                </xpath>
                <xpath expr="//tree/field[@name='date_order']" position="attributes">
                    <attribute name="string">วันที่ขอซื้อ</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='order_id']" position="attributes">
                    <attribute name="string">เลขที่ใบขอซื้อ</attribute>
                    <attribute name="width">160px</attribute>
                </xpath>


                <xpath expr="//tree/field[@name='product_id']" position="attributes">

                    <attribute name="width">100px</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='price_unit']" position="attributes">
                    <attribute name="string">ราคาต่อหน่วย</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='product_qty']" position="replace">
                    <field name="required_qty"/>
                </xpath>
            </field>
    </record>
        <!-- RM Form -->
    <record id="view_is_purchase_order_rm_form" model="ir.ui.view">
            <field name="name">purchase.order.line.rm</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form2"/> <!-- Correct module name -->
            <field name="arch" type="xml">
                    <field name="name"/>
                    <field name="partner_id" string="Vendor" />
                    <field name="product_id"/>
                    <field name="price_unit"/>
                    <field name="product_qty"/>
                    <field name="product_uom" groups="uom.group_uom"/>
                    <field name="date_planned"  widget="date"/>
            </field>
    </record>

        <!-- RM Tree2 -->
    <record id="purchase_order_view_tree_custom" model="ir.ui.view">
        <field name="name">purchase.order.view.tree.custom</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="product_id" string="Custom Field" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
